C++ Code:
#include<iostream>
using namespace std;
struct Node
{
    int data;
    Node* next;
};
void insertNewNodeAtEnd(Node* &head,int value)
{
    Node* newnode=new Node{value,nullptr};
    if(head==NULL)
    {
        head=newnode;
        return;
    }
    else
    {
        Node* temp=head;
        while(temp->next!=NULL)
        {
            temp=temp->next;
        }
        temp->next=newnode;
    }
}
void deleteAllNodesWithValX(Node* &head,int x)
{
    if(head==NULL)
    {
        return;
    }
    while(head!=NULL && head->data==x)
    {
        Node* todel=head;
        head=head->next;
        delete todel;
    }
    Node* temp=head;
    while(temp!=NULL && temp->next!=NULL)
    {
        if(temp->next->data==x)
        {
            Node* todel=temp->next;
            temp->next=temp->next->next;
            delete todel;
        }
        else
        {
            temp=temp->next;
        }
    }
}
void displayList(Node* head)
{
    Node* temp=head;
    while(temp!=NULL)
    {
        cout<<temp->data<<"->";
        temp=temp->next;
    }
    cout<<"nullptr"<<endl;
}
int main()
{
    int n,val,x;
    cin>>n>>x;
    Node* head=nullptr;
    for(int i=0;i<n;i++)
    {
        cin>>val;
        insertNewNodeAtEnd(head,val);
    }
    deleteAllNodesWithValX(head,x);
    displayList(head);
}

Input:
6 2
1 2 3 2 5 2

Output:
1->3->5->nullptr
