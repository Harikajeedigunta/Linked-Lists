C++ Code:
#include<iostream>
using namespace std;
struct Node
{
    int data;
    Node* next;
};
void insertNewNodeAtEnd(Node* &head,int value)
{
    Node* newnode=new Node{value,nullptr};
    if(head==NULL)
    {
        head=newnode;
    }
    else
    {
        Node* temp=head;
        while(temp->next!=NULL)
        {
            temp=temp->next;
        }
        temp->next=newnode;
    }
}
void deleteNodeWithValueX(Node* &head,int x)
{
    if(head->data==x)
    {
        Node* temp=head;
        head=head->next;
        delete temp;
        return;
    }
    Node* temp=head;
    Node* prev=nullptr;
    while(temp!=NULL && temp->data!=x)
    {
        prev=temp;
        temp=temp->next;
    }
    if(temp==NULL)
    {
        return;
    }
    prev->next=temp->next;
    delete temp;
}
void displayList(Node* head)
{
    Node* temp=head;
    while(temp!=NULL)
    {
        cout<<temp->data<<"->";
        temp=temp->next;
    }
    cout<<"Nullptr"<<endl;
}
int main()
{
    int n,val,x;
    cin>>n>>x;
    Node* head=nullptr;
    for(int i=0;i<n;i++)
    {
        cin>>val;
        insertNewNodeAtEnd(head,val);
    }
    deleteNodeWithValueX(head,x);
    displayList(head);
}

Input:
5 3
1 2 3 4 5

Output:
1->2->4->5->Nullptr
